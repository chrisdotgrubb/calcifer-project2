<%- include('../partials/header') %>
<h1 class="text-center my-4"><%= customer.first %> <%= customer.last %></h1>
<h2 class="text-center my-4"><%= car.make %> <%= car.model %></h2>
<div class="d-flex flex-column flex-md-row p-4 gap-4 py-md-5 align-items-center justify-content-center">
	<div class="list-group col-6">

		<% car.services.forEach(service=> { %>
			<a href="/customers/<%= customer.id %>/cars/<%= car.id %>/services/<%= service.id %>" class="list-group-item list-group-item-action d-flex gap-3 py-3">
				<div class="d-flex gap-2 w-100 justify-content-between">
					<div>
						<h6 class="mb-2">
							<%= service.date %> <%= service.mileage %>
						</h6>
						<p class="mb-0 opacity-75">
							<%= service.description %>
						</p>
					</div>
					<small class="opacity-50 text-nowrap">
						<%= service.price %>
					</small>
				</div>
			</a>
		<% }); %>
	</div>
</div>
<div class="d-flex flex-column flex-md-row gap-5 align-items-center justify-content-center">
	<form class="form-group" action="/customers/<%= customer.id %>/cars/<%= car.id %>/services/new" method="GET">
		<button class="btn btn-md btn-primary" type="submit">New Service</button>
	</form>
</div>

<%- include('../partials/footer') %>