<%- include('../partials/header') %>
	<div class="d-flex flex-column flex-md-row p-4 gap-4 py-md-5 align-items-center justify-content-center">
		<div class="form-group col-4 bg-warning p-3">
			<form action="/customers/<%= customer.id %>/cars/<%= car.id %>/services/<%= service.id %>?_method=PUT" method="POST" class="mt-3">
				<h1 class="h3 mb-3 fw-normal">Edit Car</h1>

				<div class="form-floating">
					<input type="date" class="form-control my-1" id="date" name="date" value="<%= service.date %>">
					<label for="date">Date</label>
				</div>

				<div class="form-floating">
					<input type="number" id="mileage" class="form-control my-1" id="mileage" name="mileage"
						value="<%= service.mileage %>">
					<label for="mileage">Mileage</label>
				</div>

				<div class="form-floating">
					<input type="text" class="form-control my-1" id="description" name="description" value="<%= service.description %>">
					<label for="description">Description</label>
				</div>

				<div class="form-floating">
					<input type="number" class="form-control my-1" id="price" name="price" value="$<%= service.price %>">
					<label for="price">Price</label>
				</div>

				<div class="form-check">
					<input type="checkbox" class="form-check-input my-1" id="isInShop" name="isInShop" <%= service.isInShop ? 'checked' : '' %>>
					<label for="isInShop">isInShop</label>
				</div>

				<div class="form-check">
					<input type="checkbox" class="form-check-input my-1" id="isPickedUp" name="isPickedUp" <%= service.isPickedUp ? 'checked' : '' %>>
					<label for="isPickedUp">isPickedUp</label>
				</div>

				<div class="form-check">
					<input type="checkbox" class="form-check-input my-1" id="isPaid" name="isPaid" <%= service.isPaid ? 'checked' : '' %>>
					<label for="isPaid">isPaid</label>
				</div>

				<div class="text-center">
					<button class="btn btn-primary w-25 my-2" type="submit">Confirm Update</button>
				</div>

			</form>

		</div>
	</div>

<%- include('../partials/footer') %>