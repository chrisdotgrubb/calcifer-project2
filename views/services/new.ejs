<%- include('../partials/header') %>
	<div class="d-flex flex-column flex-md-row p-4 gap-4 py-md-5 align-items-center justify-content-center">
		<div class="form-group col-4 p-3">
			<form action="/customers/<%= customer.id %>/cars/<%= car.id %>/services" method="POST" class="mt-3">
				<h1 class="h3 mb-3 fw-normal">Add New Service for <%= car.model %></h1>

				<div class="form-floating">
					<input type="date" class="form-control my-1" id="date" name="date">
					<label for="date">Date</label>
				</div>

				<div class="form-floating">
					<input type="number" id="mileage" class="form-control my-1" id="mileage" name="mileage">
					<label for="mileage">Mileage</label>
				</div>

				<div class="form-floating">
					<input type="text" class="form-control my-1" id="description" name="description">
					<label for="description">Description</label>
				</div>

				<div class="form-floating">
					<input type="number" class="form-control my-1" id="price" name="price">
					<label for="price">Price</label>
				</div>

				<div class="form-check">
					<input type="checkbox" class="form-check-input my-1" id="isInShop" name="isInShop">
					<label for="isInShop">Is getting worked on now</label>
				</div>

				<div class="form-check">
					<input type="checkbox" class="form-check-input my-1" id="isPickedUp" name="isPickedUp">
					<label for="isPickedUp">Customer picked up</label>
				</div>

				<div class="form-check">
					<input type="checkbox" class="form-check-input my-1" id="isPaid" name="isPaid">
					<label for="isPaid">Is paid</label>
				</div>
				
				<div class="text-center">
					<button class="btn btn-primary w-25 my-2" type="submit">Add Service</button>
				</div>

			</form>

		</div>
	</div>

<%- include('../partials/footer') %>