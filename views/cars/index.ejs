<%- include('../partials/header') %>
<div class="d-flex flex-column flex-md-row pt-3 align-items-center">
	<ul class="breadcrumb">
		<li class="breadcrumb-item"><a href="/customers" class="text-decoration-none text-primary">Customers</a></li>
		<li class="breadcrumb-item"><a href="/customers/<%= customer.id %>" class="text-decoration-none text-primary"><%= customer.first %> <%= customer.last %></a></li>
		<li class="breadcrumb-item active">Cars</li>
	</ul>
</div>
<h1 class="text-center my-4"><%= customer.first %> <%= customer.last %></h1>
<div class="d-flex flex-column flex-md-row p-4 gap-4 py-md-5 align-items-center justify-content-center">
	<div class="list-group col-6">

		<% customer.cars.forEach(car=> { %>
			<a href="/customers/<%= customer.id %>/cars/<%= car.id %>" class="list-group-item list-group-item-action d-flex gap-3 py-3">
				<div class="d-flex gap-2 w-100 justify-content-between">
					<div>
						<h6 class="mb-2">
							<%= car.make %> <%= car.model %>
						</h6>
						<p class="mb-0 opacity-75">
							<%= car.trimLevel %> | <%= car.engine %>
						</p>
					</div>
					<small class="opacity-50 text-nowrap">
						<%= car.year %>
					</small>
				</div>
			</a>
		<% }); %>
	</div>
</div>
<div class="d-flex flex-column flex-md-row gap-5 align-items-center justify-content-center">
	<form class="form-group" action="/customers/<%= customer.id %>/cars/new" method="GET">
		<button class="btn btn-md btn-primary" type="submit">New Car</button>
	</form>
</div>

<%- include('../partials/footer') %>